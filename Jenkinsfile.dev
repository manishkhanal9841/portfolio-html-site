pipeline {
    agent any

    stages {
        stage('Repo scan') {
            steps {
                echo 'Repo being scanned'
                sh 'trivy repo https://github.com/manishkhanal9841/portfolio-html-site.git'
            }
        }

        stage('Code Fetch') {
            steps {
                echo 'Code fetch from git'
                git url:'https://github.com/manishkhanal9841/portfolio-html-site.git', branch:'dev'
            }
        }
        
        stage('Build') {
            steps {
                sh 'docker build -t my-new-website-dev .'
            }
        }

        stage('Image scan') {
            steps {
                echo 'Image being scanned'
                sh 'trivy image my-new-website-dev'
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Code Deploy to container'
                sh 'docker run -d -p 81:80 my-new-website-dev'
            }
        }
        
        
    }
}
